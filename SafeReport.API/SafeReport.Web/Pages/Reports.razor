@page "/reports"
@using SafeReport.Web.DTOs
@using SafeReport.Web.Services
<PageTitle>@_Localizer["Reports"]</PageTitle>
<h3 class="mb-4">@_Localizer["ReportsList"]</h3>

<div class="row mb-3 align-items-end">

    <div class="col-md-3">
        <label class="form-label">@_Localizer["Date"]</label>
        <input type="date" class="form-control"
               @bind="filterDate"
               @bind:event="oninput"
               @onchange="@(e => OnDateChanged(e))" />
    </div>

    <div class="col-md-3">
        <label class="form-label">@_Localizer["IncidentType"]</label>
        <select class="form-select"
                @bind="incidentTypeId"
                @bind:event="oninput"
                @onchange="@(e => OnIncidentTypeChanged(e))"
                disabled="@(!filterType.HasValue)">
            <option value="">@_Localizer["IncidentTypes"]</option>
            @foreach (var type in incidentTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">@_Localizer["Incident"]</label>
        <select class="form-select"
                @bind="filterType"
                @bind:event="oninput"
                @onchange="@(e => OnIncidentChanged(e))">
            <option value="">@_Localizer["Incidents"]</option>
            @foreach (var item in reportTypes)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-secondary btn-m" @onclick="ResetFilters">
            @_Localizer["Reset"]
        </button>
    </div>

</div>
@if (pagedReports is null || pagedReports.Count == 0)
{
    <p>@_Localizer["LoadingReports"]</p>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>@_Localizer["Incident"]</th>
                <th>@_Localizer["IncidentType"]</th>
                <th>@_Localizer["Description"]</th>
                <th>@_Localizer["CreatedDate"]</th>
                <th>@_Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in pagedReports)
            {
                <tr>
                    <td>@report.IncidentName</td>
                    <td>@report.IncidentTypeName</td>
                    <td>@report.Description</td>
                    <td>@report.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => ShowDetails(report.Id)">
                            <i class="bi bi-info-circle"></i> @_Localizer["Details"]
                        </button>
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => PrintReport(report.Id)">
                            <i class="bi bi-printer"></i> @_Localizer["Print"]
                        </button>
                        <button class="btn btn-sm btn-danger me-1" @onclick="() => DeleteReport(report.Id)">
                            <i class="bi bi-trash"></i> @_Localizer["Delete"]
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (allresponse.Reports!= null)
    {
        var startItem = ((currentPage - 1) * pageSize) + 1;
        var endItem = Math.Min(currentPage * pageSize, allresponse.TotalCount);

        <div class="text-muted mb-2">
            @_Localizer["Showing"] @startItem - @endItem @_Localizer["of"] @allresponse.TotalCount @_Localizer["results"]
        </div>
    }

    <Pagination @bind-CurrentPage="currentPage"
                TotalPages="@totalPages"
                PageSize="@pageSize"
                OnPageChange="LoadData"
                OnPageSizeChange="UpdatePageSize" />




}

