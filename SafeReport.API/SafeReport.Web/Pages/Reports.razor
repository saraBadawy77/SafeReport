<div class="row mb-3 align-items-end">

    <div class="col-md-3">
        <label class="form-label">Date</label>
        <input type="date" class="form-control"
               @bind="filterDate"
               @bind:event="oninput"
               @onchange="@(e => OnDateChanged(e))" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Incident Type</label>
        <select class="form-select"
                @bind="incidentTypeId"
                @bind:event="oninput"
                @onchange="@(e => OnIncidentTypeChanged(e))"
                disabled="@(!filterType.HasValue)">
            <option value="">Incident Types</option>
            @foreach (var type in incidentTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Incident</label>
        <select class="form-select"
                @bind="filterType"
                @bind:event="oninput"
                @onchange="@(e => OnIncidentChanged(e))">
            <option value="">Incidents</option>
            @foreach (var item in reportTypes)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3 d-flex justify-content-start">
        <button class="btn btn-secondary btn-m" @onclick="ResetFilters">
            Reset
        </button>
    </div>

</div>


@if (pagedReports is null || pagedReports.Count == 0)
{
    <p>Loading reports....</p>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Incident</th>
                <th>Incident Type</th>
                <th>Description</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in pagedReports)
            {
                <tr>
                    <td>@report.IncidentName</td>
                    <td>@report.IncidentTypeName</td>
                    <td>@report.Description</td>
                    <td>@report.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => ShowDetails(report.Id)">
                            <i class="bi bi-info-circle"></i> Details
                        </button>
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => PrintReport(report.Id)">
                            <i class="bi bi-printer"></i> Print
                        </button>
                        <button class="btn btn-sm btn-danger  me-1" @onclick="() => DeleteReport(report.Id)">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="PrevPage">Previous</button>
            </li>
               @for (int i = 1; i <= totalPages; i++)
                 {
                var cpage = i; 
               <li class="page-item @(currentPage == cpage ? "active" : "")">
                 <button class="page-link" @onclick="() => GoToPage(cpage)">@cpage</button>
               </li>
                 }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <button class="page-link" @onclick="NextPage">Next</button>
            </li>
        </ul>
    </nav>
}
